<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <img src="/img/logo.png" class="logo">
            <h3 class="text-center">Account Register</h3>
            <form>
                <div class="form-group">
                    <label for="email" required name='email'>Email</label>
                    <input type="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="name" required name='Name'>Name</label>
                    <input type="text" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="password" required name='password'>Password</label>
                    <input type="password" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="password2" required name='password2'>Confirm Password</label>
                    <input type="password2" class="form-control" required>
                </div>
